<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitc.board.dao.BoardDAO">

	<!-- 
		insert select update delete
		Create Read   Update Delete
	 -->
	 <!-- 게시글 등록 -->
	 <!-- 
	<insert id="create" parameterType="com.bitc.board.vo.BoardVO">
		INSERT INTO tbl_board(title,content,writer) 
		VALUES(#{title}, #{content}, #{writer})
	</insert>
	 -->
	<!-- 게시글 상세보기 -->
	<select id="read" parameterType="int" resultType="boardVO">
		SELECT * FROM tbl_board WHERE bno = #{bno}
	</select>
	
	<!-- 게시글 수정 요청 처리 -->
	<update id="update" parameterType="boardVO">
		UPDATE tbl_board SET 
		title = #{title} ,
		content = #{content} , 
		writer = #{writer} 
		WHERE bno = #{bno}
	</update>
	
	<!-- 게시글 삭제 요청 -->
	<delete id="delete" parameterType="int">
		DELETE FROM tbl_board WHERE bno = #{bno}
	</delete>
	
	<!-- 조회수 증가 -->
	<update id="updateCnt" parameterType="int">
		UPDATE tbl_board SET viewcnt = viewcnt + 1 WHERE bno = #{bno}
	</update>
	
	<!-- 전체게시글 목록을 List<BoardVO> 타입으로 반환 -->
	<select id="listAll" resultType="boardVO">
		SELECT * FROM tbl_board ORDER BY bno DESC
	</select>
	
	<!-- 전체게시물 개수를 정수 타입으로 반환 -->
	<select id="totalCount" resultType="int">
		SELECT count(*) FROM tbl_board
	</select>
	
	<!-- 
		페이징 처리된 게시글 목록을 List<BoardVO> type으로 반환
		페이징 처리된 목록을 검색하기 위하여 Criteria type으로 매개변수 전달
		"com.bitc.common.util.Criteria" 
	-->
	<select id="listCriteria" parameterType="criteria" 
			resultType="boardVO">
		SELECT * FROM tbl_board ORDER BY bno DESC 
		limit #{startRow}, #{perPageNum}
	</select>
	
</mapper>


















